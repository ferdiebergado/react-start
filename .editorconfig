root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 80

[*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}]
indent_style = space
indent_size = 2

[*.{html,css,scss}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
